<%- include('./partials/head') %>
    <%- include('./partials/navAll') %>
        <main id="newArticle-main">

            <h1>ADD NEW ARTICLE</h1>

            <form action="" method="post">
                <input type="text" name="title" placeholder="Title">
                <input type="text" name="urlPic" placeholder="Url Picture">
                <input type="text" name="author" placeholder="Author">
                <input type="text" name="authorPic" placeholder="Author Picture">
                <textarea name="article" cols="30" rows="4">Write your article here</textarea>
                <input type="submit" name="submit" value="SEND ARTICLE">
            </form>

            <article class="articles">
                <h1>What to read next</h1>

                <% data.forEach(element=> {%>
                    <div>
                        <a href="/blog/<%=element.id%>"><img src="<%= element.url %>" alt="article-img"></a>
                        <h2>
                            <%= element.title %>
                        </h2>
                    </div>
                    <% }) %>
            </article>
        </main>

        <%- include('./partials/footer') %>